<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module02Exercise01.View.LoginPage"
             Title="Login Page">
    <VerticalStackLayout
        Padding="30,100"
        Spacing="25">

        <Image Source="https://cdn-icons-png.flaticon.com/128/4081/4081143.png" 
               HeightRequest="100" 
               WidthRequest="100"
               HorizontalOptions="StartAndExpand"/>
        
        <Label Text="Hello"
               x:Name="MyLabel"
               FontSize="30"
               FontAttributes="Bold"/>
        
        <Label Text="Log in to your account to continue"
               Margin="0,-10"/>

        <Entry Placeholder="Username"
               Margin="0,10"/>

        <Entry Placeholder="Password" 
               IsPassword="True"
               Margin="0,-10"/>

        <Button Text="Login" 
                Clicked="OnLoginClicked"
                CornerRadius="20"
                Padding="18"
                Margin="0,10"
                BackgroundColor="Maroon"/>
    </VerticalStackLayout>
</ContentPage>